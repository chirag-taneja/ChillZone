<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="side_bar_style">
        <item name="android:layout_width">215dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:fontFamily">sans-serif-black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="recycler_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">140dp</item>
    </style>

    <style name="Widget.Theme.ChillFlix.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.ChillFlix.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>
</resources>